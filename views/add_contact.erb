<form class="addcontact" action="/addcontact" method="post">
  <fieldset>
    <legend>Adding your contact</legend>
    <input class="addfirstname" type='text' name='first_name' placeholder="First Name"><br>
    <input class="addlastname" type='text' name='last_name' placeholder="Last Name"><br>
    <input class="addemail" type='text' name='email' placeholder="Email"><br>
    <input class="addnote" type='text' name='note' placeholder="Note"><br>
    <input type="submit" value="Submit">
  </fieldset>
</form>
</nav>
<h2 class="mycontacts">My Contacts: <span class='number'><%= @contacts.size %></span></h2>
<ul>
  <% @contacts.each do |contact| %>
  <li class="contacts">
    <span class='info'><%= contact.first_name %> <%= contact.last_name %> (<%= contact.email %>)</span><br>
    <a href="/contacts/<%= contact.id %>" class='edit/delete'>Edit</a> | <a href="#" class='edit/delete'>Delete</a>

  </li>
  <% end %>
</ul>
